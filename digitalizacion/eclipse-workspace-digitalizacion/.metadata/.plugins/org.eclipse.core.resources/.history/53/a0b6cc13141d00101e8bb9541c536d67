plugins {
    id 'java'
    id 'eclipse' // Si usas Eclipse
    id 'maven-publish'
}

group = 'com.pocioncaidasuave'
version = '1.0'
archivesBaseName = 'PocionCaidaSuave'

repositories {
    mavenCentral()
    maven { url = uri("https://maven.minecraftforge.net") }
}

dependencies {
    // Dependencias principales de Minecraft y Forge
    implementation fg.deobf('net.minecraftforge:forge:1.19.4-45.1.0')

    // Otras dependencias necesarias (como SLF4J si la necesitas)
    implementation 'org.slf4j:slf4j-api:2.0.0-alpha1'
}

sourceSets.main.java.srcDirs = ['src/main/java']
sourceSets.main.resources.srcDirs = ['src/main/resources']

// Configuración de remapeo de código para el mod
processResources {
    filesMatching('META-INF/mods.toml') {
        expand(
                "mod_id" : archivesBaseName,
                "version" : version
        )
    }
}

tasks.withType(JavaCompile) {
    options.encoding = 'UTF-8'
}
